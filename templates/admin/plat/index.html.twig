{% extends 'base.html.twig' %}

{% block title %}Liste des plats{% endblock %}

{% block body %}
<h1>Liste des plats</h1>

<a href="{{ path('app_admin_plat_new') }}">‚ûï Ajouter un plat</a>

<br><br>

<table border="1" cellpadding="10">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>Disponible</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for plat in plats %}
            <tr>
                <td>{{ plat.id }}</td>
                <td>{{ plat.nom }}</td>
                <td>{{ plat.prix }} DH</td>
                <td>{% if plat.disponible %}‚úÖ Oui{% else %}‚ùå Non{% endif %}</td>
                <td>
                    {% if plat.image %}
                        <img src="{{ asset('uploads/' ~ plat.image) }}" alt="{{ plat.nom }}" width="80">
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_admin_plat_edit', {id: plat.id}) }}">‚úèÔ∏è Modifier</a>

                    <form method="post" action="{{ path('app_admin_plat_delete', {id: plat.id}) }}"
                          style="display:inline;"
                          onsubmit="return confirm('Voulez-vous vraiment supprimer ce plat ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_plat_' ~ plat.id) }}">
                        <button type="submit">üóëÔ∏è Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun plat trouv√©</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
