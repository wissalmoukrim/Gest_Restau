{% extends 'base_dashboard.html.twig' %}

{% block title %}üçΩÔ∏è Gestion des plats{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-green-50 p-4 md:p-8">
    <div class="max-w-7xl mx-auto">
        <!-- Messages flash -->
        {% for message in app.flashes('success') %}
        <div class="mb-6 p-4 bg-gradient-to-r from-green-500 to-green-600 text-white rounded-xl shadow-lg 
                    flex items-center animate-fade-in-down">
            <i class="fas fa-check-circle text-xl mr-3"></i>
            <span class="font-medium">{{ message }}</span>
        </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
        <div class="mb-6 p-4 bg-gradient-to-r from-red-500 to-red-600 text-white rounded-xl shadow-lg 
                    flex items-center animate-fade-in-down">
            <i class="fas fa-exclamation-circle text-xl mr-3"></i>
            <span class="font-medium">{{ message }}</span>
        </div>
        {% endfor %}

        <!-- Header -->
        <div class="mb-8">
            <!-- Breadcrumb -->
            <div class="flex items-center text-sm text-gray-600 mb-6">
                <a href="{{ path('dashboard') }}" 
                   class="inline-flex items-center hover:text-green-600 transition-colors">
                    <i class="fas fa-home mr-2"></i>
                    Dashboard
                </a>
                <span class="mx-2">/</span>
                <span class="text-gray-900 font-medium">Plats</span>
            </div>

            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
                <div>
                    <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">üçΩÔ∏è Gestion des plats</h1>
                    <p class="text-gray-600">G√©rez votre menu et vos plats</p>
                </div>

                <!-- Actions -->
                <div class="flex flex-col sm:flex-row gap-4">
                    <!-- Stats -->
                    <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-200">
                        <div class="flex items-center gap-3">
                            <div class="p-2 bg-green-100 rounded-lg">
                                <i class="fas fa-utensils text-green-600"></i>
                            </div>
                            <div>
                                <p class="text-2xl font-bold text-gray-900">{{ plats|length }}</p>
                                <p class="text-sm text-gray-600">Plat(s)</p>
                            </div>
                        </div>
                    </div>

                    <!-- Add Button -->
                    <a href="{{ path('app_admin_plat_new') }}" 
                       class="inline-flex items-center justify-center gap-3 bg-gradient-to-r from-green-500 to-green-600 
                              text-white font-bold px-6 py-3 rounded-xl shadow-lg hover:shadow-xl 
                              hover:from-green-600 hover:to-green-700 transition-all duration-300 transform hover:-translate-y-1">
                        <i class="fas fa-plus-circle"></i>
                        Nouveau plat
                    </a>
                </div>
            </div>
        </div>

        <!-- Plat Grid -->
        {% if plats|length > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {% for plat in plats %}
            <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden 
                        hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
                <!-- Image Container -->
                <div class="relative h-48 overflow-hidden">
                    {% if plat.image %}
                    <img src="{{ asset('uploads/' ~ plat.image) }}" 
                         alt="{{ plat.nom }}"
                         class="w-full h-full object-cover transform hover:scale-110 transition-transform duration-500">
                    {% else %}
                    <div class="w-full h-full bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                        <i class="fas fa-utensils text-gray-400 text-5xl"></i>
                    </div>
                    {% endif %}
                    
                    <!-- Disponibility Badge -->
                    <div class="absolute top-4 right-4">
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold 
                                    {{ plat.disponible ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' }}">
                            <i class="fas fa-{{ plat.disponible ? 'check' : 'times' }} mr-1"></i>
                            {{ plat.disponible ? 'Disponible' : 'Indisponible' }}
                        </span>
                    </div>
                    
                    <!-- Price Badge -->
                    <div class="absolute bottom-4 left-4">
                        <span class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-500 to-blue-600 
                                    text-white font-bold rounded-lg shadow-md">
                            <i class="fas fa-tag mr-2"></i>
                            {{ plat.prix }} DH
                        </span>
                    </div>
                </div>

                <!-- Content -->
                <div class="p-6">
                    <!-- Title -->
                    <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-1">{{ plat.nom }}</h3>
                    
                    <!-- Description -->
                    <p class="text-gray-600 mb-4 text-sm line-clamp-2">
                        {{ plat.description|default('Aucune description disponible') }}
                    </p>
                    
                    <!-- ID Badge -->
                    <div class="mb-4">
                        <span class="inline-flex items-center text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded">
                            <i class="fas fa-hashtag mr-1"></i>
                            ID: {{ plat.id }}
                        </span>
                    </div>

                    <!-- Actions -->
                    <div class="flex gap-3 pt-4 border-t border-gray-100">
                        <!-- Edit -->
                        <a href="{{ path('app_admin_plat_edit', {'id': plat.id}) }}" 
                           class="flex-1 inline-flex items-center justify-center gap-2 bg-gradient-to-r from-amber-500 to-amber-600 
                                  text-white font-medium px-4 py-2 rounded-lg hover:from-amber-600 hover:to-amber-700 
                                  transition-all duration-200">
                            <i class="fas fa-edit"></i>
                            Modifier
                        </a>

                        <!-- Delete -->
                        <form method="post" 
                              action="{{ path('app_admin_plat_delete', {'id': plat.id}) }}" 
                              onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer \\'{{ plat.nom }}\\' ?');"
                              class="flex-1">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_plat_' ~ plat.id) }}">
                            <button type="submit" 
                                    class="w-full inline-flex items-center justify-center gap-2 bg-gradient-to-r from-red-500 to-red-600 
                                           text-white font-medium px-4 py-2 rounded-lg hover:from-red-600 hover:to-red-700 
                                           transition-all duration-200">
                                <i class="fas fa-trash"></i>
                                Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        <!-- Summary -->
        <div class="mt-8 p-6 bg-white rounded-2xl shadow-sm border border-gray-200">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div>
                    <h3 class="text-lg font-bold text-gray-900">R√©sum√©</h3>
                    <p class="text-gray-600">
                        Affichage de <span class="font-bold text-green-600">{{ plats|length }}</span> 
                        plat{% if plats|length > 1 %}s{% endif %}
                    </p>
                </div>
               
            </div>
        </div>

        {% else %}
        <!-- Empty State -->
        <div class="flex flex-col items-center justify-center py-16 px-4 text-center">
            <div class="w-32 h-32 mb-8 bg-gradient-to-br from-gray-100 to-gray-200 rounded-3xl 
                        flex items-center justify-center shadow-inner">
                <i class="fas fa-utensils text-gray-400 text-6xl"></i>
            </div>
            
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Aucun plat trouv√©</h3>
            <p class="text-gray-600 max-w-md mb-8">
                Votre menu est vide. Commencez par ajouter vos premiers plats pour construire votre carte.
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4">
                <a href="{{ path('app_admin_plat_new') }}" 
                   class="inline-flex items-center justify-center gap-3 bg-gradient-to-r from-green-500 to-green-600 
                          text-white font-bold px-8 py-3 rounded-xl shadow-lg hover:shadow-xl 
                          hover:from-green-600 hover:to-green-700 transition-all duration-300">
                    <i class="fas fa-plus-circle"></i>
                    Ajouter un plat
                </a>
                
                <a href="{{ path('dashboard') }}" 
                   class="inline-flex items-center justify-center gap-3 border-2 border-gray-300 
                          text-gray-700 font-medium px-8 py-3 rounded-xl hover:border-gray-400 
                          hover:bg-gray-50 transition-all duration-300">
                    <i class="fas fa-arrow-left"></i>
                    Retour au dashboard
                </a>
            </div>
            
            <!-- Tips -->
            <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6 max-w-3xl">
                <div class="p-6 bg-white rounded-xl border border-gray-200 shadow-sm">
                    <div class="w-12 h-12 mb-4 bg-blue-100 rounded-xl flex items-center justify-center">
                        <i class="fas fa-image text-blue-600 text-xl"></i>
                    </div>
                    <h4 class="font-bold text-gray-900 mb-2">Ajoutez des photos</h4>
                    <p class="text-sm text-gray-600">
                        Une belle photo augmente l'app√©tit de vos clients
                    </p>
                </div>
                
                <div class="p-6 bg-white rounded-xl border border-gray-200 shadow-sm">
                    <div class="w-12 h-12 mb-4 bg-green-100 rounded-xl flex items-center justify-center">
                        <i class="fas fa-tag text-green-600 text-xl"></i>
                    </div>
                    <h4 class="font-bold text-gray-900 mb-2">Prix attractifs</h4>
                    <p class="text-sm text-gray-600">
                        Des prix clairs et comp√©titifs pour vos plats
                    </p>
                </div>
                
                <div class="p-6 bg-white rounded-xl border border-gray-200 shadow-sm">
                    <div class="w-12 h-12 mb-4 bg-purple-100 rounded-xl flex items-center justify-center">
                        <i class="fas fa-clock text-purple-600 text-xl"></i>
                    </div>
                    <h4 class="font-bold text-gray-900 mb-2">Gestion facile</h4>
                    <p class="text-sm text-gray-600">
                        Modifiez disponibilit√© et prix en un clic
                    </p>
                </div>
            </div>
        </div>
        {% endif %}

        <!-- Floating Action Button (Mobile) -->
        <a href="{{ path('app_admin_plat_new') }}" 
           class="fixed bottom-6 right-6 md:hidden w-14 h-14 bg-gradient-to-r from-green-500 to-green-600 
                  text-white rounded-full shadow-2xl flex items-center justify-center 
                  hover:from-green-600 hover:to-green-700 transition-all duration-300 z-50">
            <i class="fas fa-plus text-xl"></i>
        </a>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .animate-fade-in-down {
        animation: fadeInDown 0.5s ease-out;
    }

    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .line-clamp-1 {
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
    }

    .line-clamp-2 {
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
    }

    .transition-all {
        transition-property: all;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Hover effects */
    .group:hover .group-hover\:scale-110 {
        transform: scale(1.1);
    }

    /* Smooth shadow transitions */
    .shadow-lg {
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    .hover\:shadow-xl:hover {
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    /* Gradient borders */
    .border-gradient {
        border-image: linear-gradient(to right, #4CAF50, #2196F3) 1;
    }

    /* Loading skeleton (for future use) */
    .skeleton {
        background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
        background-size: 200% 100%;
        animation: loading 1.5s infinite;
    }

    @keyframes loading {
        0% {
            background-position: 200% 0;
        }
        100% {
            background-position: -200% 0;
        }
    }
</style>

<!-- JavaScript Enhancements -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Confirmation de suppression avec sweet alert (optionnel)
    const deleteForms = document.querySelectorAll('form[onsubmit*="confirm"]');
    deleteForms.forEach(form => {
        const originalSubmit = form.onsubmit;
        form.onsubmit = function(e) {
            e.preventDefault();
            
            // R√©cup√®re le nom du plat
            const platName = this.getAttribute('onsubmit').match(/\\'([^']+)\\'/)[1];
            
            // Custom confirmation
            if (confirm(`Supprimer "${platName}" ?\nCette action est irr√©versible.`)) {
                this.submit();
            }
        };
    });

    // Animation au scroll
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('animate-fade-in-down');
            }
        });
    }, observerOptions);

    // Observe les cartes
    document.querySelectorAll('.grid > div').forEach((card, index) => {
        card.style.animationDelay = `${index * 0.1}s`;
        observer.observe(card);
    });

    // Tooltips pour les badges
    const badges = document.querySelectorAll('[title]');
    badges.forEach(badge => {
        badge.addEventListener('mouseenter', (e) => {
            const tooltip = document.createElement('div');
            tooltip.className = 'fixed z-50 px-3 py-2 bg-gray-900 text-white text-sm rounded-lg shadow-xl';
            tooltip.textContent = e.target.getAttribute('title');
            document.body.appendChild(tooltip);
            
            const rect = e.target.getBoundingClientRect();
            tooltip.style.top = `${rect.top - 40}px`;
            tooltip.style.left = `${rect.left + rect.width/2 - tooltip.offsetWidth/2}px`;
            
            e.target.dataset.tooltipId = tooltip;
        });
        
        badge.addEventListener('mouseleave', (e) => {
            if (e.target.dataset.tooltipId) {
                e.target.dataset.tooltipId.remove();
            }
        });
    });

    // Filtre de recherche (exemple futur)
    const searchInput = document.createElement('input');
    searchInput.type = 'text';
    searchInput.placeholder = 'Rechercher un plat...';
    searchInput.className = 'w-full md:w-64 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500';
    
    // Vous pouvez ajouter ce champ dans le header si besoin
    // document.querySelector('.header-actions').prepend(searchInput);
});
</script>
{% endblock %}