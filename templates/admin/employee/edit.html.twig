{% extends 'base_dashboard.html.twig' %}

{% block title %}Modifier un employé{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Modifier l'employé : {{ user.nom }} {{ user.prenom }}</h1>

    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.nom) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.prenom) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.email) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.telephone) }}
            </div>
        </div>

        {{ form_row(form.adresse) }}
        {{ form_row(form.roles) }}
        {{ form_row(form.password) }}

        <button class="btn btn-warning mt-3">Modifier</button>
    {{ form_end(form) }}

    <a href="{{ path('admin_employee_index') }}" class="btn btn-secondary mt-2">Retour à la liste</a>
</div>
{% endblock %}
