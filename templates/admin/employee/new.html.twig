{% extends 'base_dashboard.html.twig' %}

{% block title %}Ajouter un employé{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Ajouter un employé</h1>

    {{ form_start(form) }}

    {{ form_errors(form) }}

    {# CSRF TOKEN — NE PAS SUPPRIMER #}
    {{ form_row(form._token) }}

    <div class="row">
        <div class="col-md-6">{{ form_row(form.nom) }}</div>
        <div class="col-md-6">{{ form_row(form.prenom) }}</div>
    </div>

    <div class="row">
        <div class="col-md-6">{{ form_row(form.email) }}</div>
        <div class="col-md-6">{{ form_row(form.telephone) }}</div>
    </div>

    {{ form_row(form.adresse) }}
    {{ form_row(form.roles) }}
    {{ form_row(form.password) }}

    <button type="submit" class="btn btn-success mt-3">
        Ajouter
    </button>

    {{ form_end(form) }}

    <a href="{{ path('admin_employee_index') }}" class="btn btn-secondary mt-2">
        Retour à la liste
    </a>
</div>
{% endblock %}
