{% extends 'base_dashboard.html.twig' %}

{% block title %}üë• Gestion des Employ√©s{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <!-- En-t√™te -->
    <div class="mb-8">
        <div class="flex justify-between items-center mb-4">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-3">
                    <span class="text-blue-600">üë•</span>
                    Gestion des Employ√©s
                </h1>
                <p class="text-gray-600 mt-2">G√©rez les membres de votre √©quipe</p>
            </div>
            <a href="{{ path('admin_employee_new') }}" 
               class="bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white 
                      px-6 py-3 rounded-lg font-bold flex items-center gap-2 shadow-lg transition-all 
                      hover:shadow-xl hover:-translate-y-1">
                <i class="fas fa-user-plus"></i>
                Nouvel employ√©
            </a>
        </div>
        
        <!-- Messages flash -->
        {% for message in app.flashes('success') %}
        <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6 rounded">
            <div class="flex items-center">
                <div class="flex-shrink-0 text-green-500">
                    <i class="fas fa-check-circle text-xl"></i>
                </div>
                <div class="ml-3">
                    <p class="text-green-800 font-medium">{{ message }}</p>
                </div>
            </div>
        </div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded">
            <div class="flex items-center">
                <div class="flex-shrink-0 text-red-500">
                    <i class="fas fa-exclamation-circle text-xl"></i>
                </div>
                <div class="ml-3">
                    <p class="text-red-800 font-medium">{{ message }}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    <!-- Statistiques -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
        <div class="bg-white p-6 rounded-xl shadow border border-gray-200">
            <div class="flex items-center">
                <div class="p-3 bg-blue-100 rounded-lg mr-4">
                    <i class="fas fa-users text-blue-600 text-xl"></i>
                </div>
                <div>
                    <p class="text-gray-500 text-sm">Total employ√©s</p>
                    <p class="text-2xl font-bold text-gray-800">{{ users|length }}</p>
                </div>
            </div>
        </div>
        
        <div class="bg-white p-6 rounded-xl shadow border border-gray-200">
            <div class="flex items-center">
                <div class="p-3 bg-green-100 rounded-lg mr-4">
                    <i class="fas fa-user-check text-green-600 text-xl"></i>
                </div>
                <div>
                    <p class="text-gray-500 text-sm">Actifs</p>
                    <p class="text-2xl font-bold text-gray-800">
                        {{ users|filter(u => u.roles|filter(r => r != 'ROLE_USER')|length > 0)|length }}
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tableau des employ√©s -->
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                            Employ√©
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                            Contact
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                            R√¥le
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for user in users %}
                    <tr class="hover:bg-gray-50 transition-colors">
                        <!-- Informations employ√© -->
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-12 w-12 bg-gradient-to-br from-blue-100 to-blue-200 
                                            rounded-full flex items-center justify-center text-blue-800 font-bold text-lg">
                                    {{ user.nom|first|upper }}{{ user.prenom|first|upper }}
                                </div>
                                <div class="ml-4">
                                    <div class="text-lg font-medium text-gray-900">
                                        {{ user.prenom }} {{ user.nom }}
                                    </div>
                                    <div class="text-sm text-gray-500">
                                        ID: #{{ user.id }}
                                    </div>
                                </div>
                            </div>
                        </td>
                        
                        <!-- Contact -->
                        <td class="px-6 py-4">
                            <div class="space-y-1">
                                <div class="flex items-center text-sm text-gray-700">
                                    <i class="fas fa-envelope mr-2 text-blue-500"></i>
                                    {{ user.email }}
                                </div>
                                {% if user.telephone %}
                                <div class="flex items-center text-sm text-gray-700">
                                    <i class="fas fa-phone mr-2 text-green-500"></i>
                                    {{ user.telephone }}
                                </div>
                                {% endif %}
                                {% if user.adresse %}
                                <div class="flex items-center text-sm text-gray-700">
                                    <i class="fas fa-map-marker-alt mr-2 text-red-500"></i>
                                    <span class="truncate max-w-xs">{{ user.adresse }}</span>
                                </div>
                                {% endif %}
                            </div>
                        </td>
                        
                        <!-- R√¥le -->
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex flex-wrap gap-1">
                                {% for role in user.roles %}
                                {% if role != 'ROLE_USER' %}
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium
                                    {% if role == 'ROLE_ADMIN' %}bg-purple-100 text-purple-800
                                    {% elseif role == 'ROLE_CHEF' %}bg-yellow-100 text-yellow-800
                                    {% elseif role == 'ROLE_LIVREUR' %}bg-green-100 text-green-800
                                    {% elseif role == 'ROLE_RECEPTIONNISTE' %}bg-blue-100 text-blue-800
                                    {% elseif role == 'ROLE_RESPONSABLE' %}bg-indigo-100 text-indigo-800
                                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                                    {{ role|replace({'ROLE_': ''})|lower|title }}
                                </span>
                                {% endif %}
                                {% endfor %}
                            </div>
                        </td>
                        
                        <!-- Actions -->
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex gap-2">
                                <a href="{{ path('admin_employee_edit', {'id': user.id}) }}"
                                   class="inline-flex items-center px-4 py-2 bg-blue-50 text-blue-700 
                                          rounded-lg font-medium hover:bg-blue-100 transition-colors">
                                    <i class="fas fa-edit mr-2"></i>
                                    Modifier
                                </a>
                                
                                <form method="post"
                                      action="{{ path('admin_employee_delete', {'id': user.id}) }}"
                                      onsubmit="return confirmSupprimer('{{ user.prenom }} {{ user.nom }}')"
                                      class="inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button type="submit"
                                            class="inline-flex items-center px-4 py-2 bg-red-50 text-red-700 
                                                   rounded-lg font-medium hover:bg-red-100 transition-colors">
                                        <i class="fas fa-trash mr-2"></i>
                                        Supprimer
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="4" class="px-6 py-12 text-center">
                            <div class="text-gray-400 mb-4">
                                <i class="fas fa-users text-5xl"></i>
                            </div>
                            <h3 class="text-lg font-medium text-gray-600 mb-2">Aucun employ√©</h3>
                            <p class="text-gray-500 mb-4">Commencez par ajouter votre premier employ√©</p>
                            <a href="{{ path('admin_employee_new') }}" 
                               class="inline-flex items-center px-6 py-3 bg-blue-600 text-white 
                                      rounded-lg font-medium hover:bg-blue-700 transition-colors">
                                <i class="fas fa-user-plus mr-2"></i>
                                Ajouter un employ√©
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        <!-- Pied du tableau -->
        {% if users|length > 0 %}
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
            <div class="flex justify-between items-center">
                <p class="text-sm text-gray-700">
                    Affichage de <span class="font-bold">{{ users|length }}</span> employ√©{% if users|length > 1 %}s{% endif %}
                </p>
                <a href="{{ path('admin_dashboard') }}" 
                   class="text-gray-600 hover:text-gray-900 font-medium flex items-center gap-2">
                    <i class="fas fa-arrow-left"></i>
                    Retour au dashboard
                </a>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<script>
function confirmSupprimer(nom) {
    return confirm(`‚ö†Ô∏è √ätes-vous s√ªr de vouloir supprimer l'employ√© "${nom}" ?\n\nCette action est irr√©versible.`);
}
</script>

<style>
    /* Animation pour les lignes du tableau */
    tr {
        transition: all 0.2s ease;
    }
    
    /* Style pour les badges de r√¥le */
    .role-badge {
        transition: transform 0.2s ease;
    }
    
    .role-badge:hover {
        transform: translateY(-1px);
    }
</style>
{% endblock %}