                        <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br 
                                    {% if loop.first %}from-amber-600 to-amber-800
                                    {% elseif loop.index == 2 %}from-gray-600 to-gray-800
                                    {% else %}from-amber-900 to-amber-950{% endif %} 
                                    rounded-xl flex items-center justify-center mr-4">
                            <span class="text-lg font-bold text-white">{{ loop.index }}</span>
                        </div>
                        
