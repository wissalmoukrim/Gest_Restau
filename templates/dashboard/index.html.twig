                        {% endif %}
                    </div>

                    <!-- Actions admin -->
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="flex gap-2 pt-3 border-t border-gray-700">
                            <a href="{{ path('app_admin_plat_edit', {id: plat.id}) }}" 
                               class="flex-1 inline-flex items-center justify-center gap-1 
                                      border border-amber-600 text-amber-400 hover:bg-amber-900 
                                      px-3 py-2 rounded-lg text-sm transition">
                                <i class="fas fa-edit"></i>
                                Modifier
                            </a>
                            <form method="post" 
