                </div>
            </div>
        </div>

        <div class="flex gap-3">
            {# üîê ADMIN ‚Üí ESPACE ADMIN #}
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('admin_dashboard') }}" class="bg-amber-600 hover:bg-amber-700 text-black px-5 py-3 rounded-xl font-bold transition flex items-center gap-2">
                    <span class="text-xl">‚öôÔ∏è</span>
                    Espace Admin
                </a>
            {% endif %}

            {# üë§ CLIENT ‚Üí ESPACE CLIENT #}
            {% if is_granted('ROLE_CLIENT') %}
                <a href="{{ path('client_dashboard') }}" class="border-2 border-amber-500 text-amber-400 hover:bg-amber-500 hover:text-black px-5 py-3 rounded-xl font-bold transition flex items-center gap-2">
                    <span class="text-xl">üë§</span>
                    Mon espace
                </a>
            {% endif %}
        </div>
    </div>
{% endif %}

{# ================= TITRE + AJOUTER PLAT ================= #}
<div class="flex justify-between items-center mb-8">
    <div>
        <h2 class="text-3xl font-bold text-amber-300">üçΩÔ∏è Notre Carte</h2>
        <p class="text-amber-500">D√©couvrez nos sp√©cialit√©s maison</p>
    </div>

    {# ‚ûï AJOUTER PLAT : ADMIN SEULEMENT #}
    {% if is_granted('ROLE_ADMIN') %}
        <a href="#" class="bg-amber-600 hover:bg-amber-700 text-black px-6 py-3 rounded-xl font-bold transition flex items-center gap-2">
            <span class="text-xl">+</span>
            Ajouter un plat
        </a>
    {% endif %}
</div>

{# ================= LISTE DES PLATS ================= #}
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for plat in plats %}
        <div class="bg-black border border-amber-800 rounded-2xl overflow-hidden hover:border-amber-600 transition-all duration-300">
            
            {# BADGE SPECIALIT√â #}
            {% if loop.first %}
                <div class="absolute top-4 right-4 bg-amber-600 text-black px-3 py-1 rounded-full text-xs font-bold z-10">
                    ‚òÖ Sp√©cialit√©
                </div>
            {% endif %}
            
            {% if plat.image is defined %}
                <div class="h-48 overflow-hidden">
                    <img src="{{ plat.image }}" class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" alt="{{ plat.nom }}">
                </div>
            {% else %}
                <div class="h-48 bg-gradient-to-br from-amber-900 to-black flex items-center justify-center">
                    <span class="text-5xl text-amber-600">üçõ</span>
                </div>
            {% endif %}

            <div class="p-5">
                <div class="flex justify-between items-start mb-3">
                    <h5 class="text-xl font-bold text-amber-200">{{ plat.nom }}</h5>
                    <span class="bg-amber-900 text-amber-300 px-3 py-1 rounded-full text-sm font-bold">
                        {{ plat.categorie ?? 'Plat' }}
                    </span>
                </div>
                
                <p class="text-amber-500 mb-4 line-clamp-2">
                    {{ plat.description ?? 'D√©licieux plat pr√©par√© avec soin par nos chefs.' }}
                </p>
                
                <div class="flex justify-between items-center">
                    <span class="text-2xl font-bold text-amber-300">{{ plat.prix }} DH</span>
                    <div class="flex items-center text-amber-500">
                        <span>‚òÖ</span><span>‚òÖ</span><span>‚òÖ</span><span>‚òÖ</span><span>‚òÜ</span>
                    </div>
                </div>
            </div>

            <div class="px-5 pb-5 flex flex-wrap gap-2">
                {# üëÅÔ∏è CONSULTER ‚Äî TOUT LE MONDE #}
                <a href="#" class="flex-1 bg-amber-600 hover:bg-amber-700 text-black px-4 py-2 rounded-lg font-bold transition text-center">
                    üëÅÔ∏è D√©tails
                </a>

                {# üõí PANIER #}
                {% if app.user %}
                    <a href="#" class="flex-1 border-2 border-amber-500 text-amber-400 hover:bg-amber-500 hover:text-black px-4 py-2 rounded-lg font-bold transition text-center">
                        üõí Commander
                    </a>
                {% else %}
                    <a href="{{ path('app_register') }}" class="flex-1 border-2 border-amber-500 text-amber-400 hover:bg-amber-500 hover:text-black px-4 py-2 rounded-lg font-bold transition text-center">
                        üõí Commander
                    </a>
                {% endif %}

                {# ADMIN BOUTONS #}
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="w-full flex gap-2 mt-2">
                        <a href="#" class="flex-1 border border-amber-600 text-amber-400 hover:bg-amber-900 px-3 py-2 rounded-lg text-sm text-center">
                            ‚úèÔ∏è Modifier
                        </a>
                        <a href="#" class="flex-1 border border-amber-800 text-amber-500 hover:bg-amber-900 px-3 py-2 rounded-lg text-sm text-center">
                            üóëÔ∏è Supprimer
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endfor %}
</div>

{# ================= STATISTIQUES ================= #}
{% if is_granted('ROLE_ADMIN') %}
<div class="mt-12 bg-black border border-amber-800 rounded-2xl p-6">
    <h3 class="text-2xl font-bold text-amber-300 mb-6">üìä Statistiques du Restaurant</h3>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="bg-amber-900/30 border border-amber-800 p-4 rounded-xl text-center">
            <div class="text-3xl text-amber-400 font-bold">24</div>
            <div class="text-amber-500">Plats vendus</div>
        </div>
        <div class="bg-amber-900/30 border border-amber-800 p-4 rounded-xl text-center">
            <div class="text-3xl text-amber-400 font-bold">1,240</div>
            <div class="text-amber-500">Revenus (DH)</div>
        </div>
        <div class="bg-amber-900/30 border border-amber-800 p-4 rounded-xl text-center">
            <div class="text-3xl text-amber-400 font-bold">12</div>
