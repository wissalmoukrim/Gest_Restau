    <div class="bg-black border border-amber-600 rounded-2xl p-6 mb-8 flex justify-between items-center">
        <div class="text-amber-200">
            <div class="flex items-center gap-3 mb-2">
                <span class="text-3xl text-amber-400">üëã</span>
                <div>
                    <p class="text-xl font-bold text-amber-300">Bienvenue {{ app.user.nom }} !</p>
                    <p class="text-amber-400">{{ app.user.email }}</p>
                </div>
            </div>
        </div>

        <div class="flex gap-3">
            {# ADMIN ‚Üí ESPACE ADMIN #}
            {% if is_granted('ROLE_ADMIN') %}
