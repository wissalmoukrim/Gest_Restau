                    <div class="flex items-center justify-between mb-4">
                        <span class="bg-amber-900 text-amber-300 px-4 py-2 rounded-full text-sm font-bold">
                            {{ plat.categorie ?? 'Plat principal' }}
                        </span>
                        <span class="text-3xl font-bold text-amber-300">{{ plat.prix }} DH</span>
                    </div>
                    
                    <h1 class="text-4xl font-bold text-amber-200 mb-4">{{ plat.nom }}</h1>
                    
                    <!-- Disponibilit√© -->
                    <div class="mb-6">
                        {% if plat.disponible %}
                            <span class="inline-flex items-center gap-2 text-green-400 bg-green-900/30 px-4 py-2 rounded-lg">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
