    if (ingredient && quantite) {
        fetch('/chef/signaler-manque', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({ingredient: ingredient, quantite: quantite})
        })
        .then(response => {
            if (response.ok) {
                alert('Signalement envoy√© !');
            }
