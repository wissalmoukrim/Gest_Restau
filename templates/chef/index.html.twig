{% extends 'base_dashboard.html.twig' %}

{% block title %}Dashboard Chef - Gest Restau{% endblock %}

{% block body %}

<h2 class="text-3xl font-bold mb-6">üßë‚Äçüç≥ Dashboard Chef - Commandes</h2>

<div class="grid grid-cols-1 gap-6">
    {% for commande in commandes %}
    <div class="bg-black border border-amber-800 rounded-2xl p-5 text-amber-200">
        <div class="flex justify-between items-center mb-3">
            <h3 class="text-xl font-bold">Commande #{{ commande.id }}</h3>
            <span class="px-3 py-1 rounded-full 
                {% if commande.statut == 'en_attente' %} bg-yellow-400 text-black
                {% elseif commande.statut == 'en_cours' %} bg-purple-400 text-black
                {% elseif commande.statut == 'prete' %} bg-green-400 text-black
                {% endif %}">
                {{ commande.statut|capitalize }}
            </span>
        </div>

        <p><strong>Client:</strong> {{ commande.user.nom }}</p>
        <p><strong>Total:</strong> {{ commande.total }} DH</p>

        <p><strong>Plats command√©s:</strong></p>
        <ul class="list-disc ml-5">
            {% for platItem in commande.commandeItems %}
                <li>
                    {{ platItem.plat.nom }} √ó {{ platItem.quantite }} 
                    ({{ platItem.prixUnitaire }} DH) 
                    = {{ platItem.sousTotal }} DH
                </li>
            {% endfor %}
        </ul>

        <form action="{{ path('chef_update_commande', {id: commande.id}) }}" method="POST" class="mt-3 flex gap-2">
            {% if commande.statut == 'en_attente' %}
                <button type="submit" name="status" value="en_cours" class="bg-yellow-400 px-4 py-2 rounded text-black font-bold">Commencer</button>
            {% elseif commande.statut == 'en_cours' %}
                <button type="submit" name="status" value="prete" class="bg-purple-400 px-4 py-2 rounded text-black font-bold">Marquer Pr√™te</button>
            {% endif %}
        </form>
    </div>
    {% else %}
        <p class="text-amber-400">Aucune commande pour l'instant.</p>
    {% endfor %}
</div>

{% endblock %}
