            </div>
            
            <div class="bg-white rounded-2xl p-6 shadow-lg border-l-4 border-purple-500">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-gray-500 text-sm">Total</p>
                        <h3 class="text-3xl font-bold text-purple-700">{{ commandesEnAttente|length + commandesEnCours|length + commandesTerminees|length }}</h3>
                    </div>
                    <span class="text-3xl text-purple-400">üìä</span>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Colonne gauche : Commandes en attente -->
            <div class="lg:col-span-2">
                <!-- Commandes en attente -->
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden mb-6">
                    <div class="bg-yellow-600 text-white p-4">
                        <h2 class="text-xl font-bold flex items-center gap-2">
                            <span>‚è≥</span> Commandes en attente
                        </h2>
                    </div>
                    <div class="p-4">
                        {% if commandesEnAttente|length > 0 %}
                            <div class="overflow-x-auto">
                                <table class="w-full">
                                    <thead>
                                        <tr class="bg-gray-100">
                                            <th class="p-3 text-left">Commande</th>
                                            <th class="p-3 text-left">Client</th>
                                            <th class="p-3 text-left">Montant</th>
                                            <th class="p-3 text-left">Heure</th>
                                            <th class="p-3 text-left">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for commande in commandesEnAttente %}
                                        <tr class="border-b border-gray-200 hover:bg-gray-50">
                                            <td class="p-3">
                                                <strong class="text-blue-700">#{{ commande.id }}</strong>
                                            </td>
                                            <td class="p-3">
                                                <div class="text-sm">{{ commande.user.email }}</div>
                                                <div class="text-xs text-gray-500">{{ commande.user.telephone ?? 'N/A' }}</div>
                                            </td>
                                            <td class="p-3 font-bold">{{ commande.total }} DH</td>
                                            <td class="p-3">
                                                <div class="text-sm">{{ commande.date|date('H:i') }}</div>
                                                <div class="text-xs text-gray-500">{{ commande.date|date('d/m') }}</div>
                                            </td>
                                            <td class="p-3">
                                                <div class="flex gap-2">
                                                    <a href="{{ path('receptionniste_commande_show', {id: commande.id}) }}"
                                                       class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm font-bold">
                                                        D√©tails
                                                    </a>
                                                    <a href="{{ path('receptionniste_clients') }}"
                                                       class="border border-green-600 text-green-600 hover:bg-green-50 px-3 py-1 rounded text-sm font-bold">
                                                        Assigner
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <div class="text-center py-8">
                                <span class="text-5xl text-green-400 mb-4 block">üéâ</span>
                                <p class="text-gray-600 text-lg">Aucune commande en attente</p>
                                <p class="text-gray-500">Toutes les commandes sont trait√©es</p>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Commandes en cours -->
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
                    <div class="bg-blue-600 text-white p-4">
                        <h2 class="text-xl font-bold flex items-center gap-2">
                            <span>‚ö°</span> Commandes en cours
                        </h2>
                    </div>
                    <div class="p-4">
                        {% if commandesEnCours|length > 0 %}
                            <div class="space-y-4">
                                {% for commande in commandesEnCours|slice(0, 5) %}
                                <div class="border border-blue-200 rounded-xl p-4 bg-blue-50">
                                    <div class="flex justify-between items-start mb-2">
                                        <div>
                                            <h4 class="font-bold text-blue-800">Commande #{{ commande.id }}</h4>
                                            <p class="text-sm text-blue-600">{{ commande.date|date('d/m/Y H:i') }}</p>
                                        </div>
                                        <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-bold">
                                            {{ commande.statut }}
                                        </span>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <p class="text-sm"><strong>Client:</strong> {{ commande.user.email }}</p>
                                        {% if commande.chef %}
                                            <p class="text-sm"><strong>Chef:</strong> {{ commande.chef.email }}</p>
                                        {% endif %}
                                        {% if commande.livreur %}
                                            <p class="text-sm"><strong>Livreur:</strong> {{ commande.livreur.email }}</p>
                                        {% endif %}
                                    </div>
                                    
                                    <div class="text-center">
                                        <a href="{{ path('receptionniste_commande_show', {id: commande.id}) }}" 
                                           class="inline-block border border-blue-600 text-blue-600 hover:bg-blue-50 px-4 py-2 rounded-lg font-bold transition">
                                            üëÅÔ∏è D√©tails
                                        </a>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                            {% if commandesEnCours|length > 5 %}
                            <div class="mt-4 text-center">
                                <a href="#" class="text-blue-600 hover:text-blue-800 font-bold">
                                    Voir toutes les commandes en cours ‚Üí
                                </a>
                            </div>
                            {% endif %}
                        {% else %}
                            <div class="text-center py-8">
                                <span class="text-5xl text-gray-300 mb-4 block">üì≠</span>
                                <p class="text-gray-500 text-lg">Aucune commande en cours</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Colonne droite : Actions -->
            <div>
                <!-- Commandes termin√©es r√©centes -->
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden mb-6">
                    <div class="bg-green-600 text-white p-4">
                        <h2 class="text-xl font-bold flex items-center gap-2">
                            <span>‚úÖ</span> Commandes termin√©es
                        </h2>
                    </div>
                    <div class="p-4">
                        {% if commandesTerminees|length > 0 %}
                            <div class="space-y-3">
                                {% for commande in commandesTerminees|slice(0, 5) %}
                                <div class="border-b border-gray-200 pb-3 last:border-0">
                                    <div class="flex justify-between items-center mb-1">
                                        <span class="font-medium text-gray-800">#{{ commande.id }}</span>
                                        <span class="text-sm text-gray-500">{{ commande.date|date('H:i') }}</span>
                                    </div>
