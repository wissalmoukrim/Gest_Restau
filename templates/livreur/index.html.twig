{% extends 'base_dashboard.html.twig' %}

{% block title %}Dashboard Livreur - Gest Restau{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-gray-100 to-blue-50">

    <!-- Header Livreur -->
    <nav class="bg-blue-900 text-white px-6 py-4 shadow-lg">
        <div class="container mx-auto flex justify-between items-center">
            <div class="flex items-center gap-3">
                <span class="text-3xl">üö¥</span>
                <div>
                    <h1 class="text-xl font-bold">Espace Livreur</h1>
                    <p class="text-blue-200 text-sm">Gestion des livraisons</p>
                </div>
            </div>
            
            <div class="flex items-center gap-4">
                <div class="bg-blue-800 px-4 py-2 rounded-full">
                    <span class="font-bold">{{ app.user.nom }} {{ app.user.prenom }}</span>
                    <span class="text-blue-300 ml-2">Livreur</span>
                </div>
                <div class="flex gap-2">
                    <a href="{{ path('app_logout') }}" 
                       class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-full font-bold transition">
                        D√©connexion
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mx-auto p-6">
        <!-- Statistiques -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-2xl p-6 shadow-lg border-l-4 border-blue-500">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-gray-500 text-sm">√Ä livrer</p>
                        <h3 class="text-3xl font-bold text-blue-700">{{ commandesPretes|length }}</h3>
                    </div>
                    <span class="text-3xl text-blue-400">üì¶</span>
                </div>
            </div>
            
            <div class="bg-white rounded-2xl p-6 shadow-lg border-l-4 border-yellow-500">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-gray-500 text-sm">En livraison</p>
                        <h3 class="text-3xl font-bold text-yellow-700">{{ commandesEnLivraison|length }}</h3>
                    </div>
                    <span class="text-3xl text-yellow-400">üöö</span>
                </div>
            </div>
            
            <div class="bg-white rounded-2xl p-6 shadow-lg border-l-4 border-green-500">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-gray-500 text-sm">Termin√©es</p>
                        <h3 class="text-3xl font-bold text-green-700">{{ commandesTerminees|length }}</h3>
                    </div>
                    <span class="text-3xl text-green-400">‚úÖ</span>
                </div>
            </div>
            
            <div class="bg-white rounded-2xl p-6 shadow-lg border-l-4 border-purple-500">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-gray-500 text-sm">Total</p>
                        <h3 class="text-3xl font-bold text-purple-700">{{ commandesPretes|length + commandesEnLivraison|length + commandesTerminees|length }}</h3>
                    </div>
                    <span class="text-3xl text-purple-400">üìä</span>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Colonne gauche : Commandes √† livrer -->
            <div class="lg:col-span-2">
                <!-- Commandes pr√™tes √† livrer -->
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden mb-6">
                    <div class="bg-blue-600 text-white p-4">
                        <h2 class="text-xl font-bold flex items-center gap-2">
                            <span>üì¶</span> Commandes √† livrer
                        </h2>
                    </div>
                    <div class="p-4">
                        {% if commandesPretes|length > 0 %}
                            <div class="space-y-4">
                                {% for commande in commandesPretes %}
                                <div class="border border-blue-200 rounded-xl p-4 hover:bg-blue-50 transition">
                                    <div class="flex justify-between items-start mb-2">
                                        <div>
                                            <h4 class="font-bold text-blue-800">Commande #{{ commande.id }}</h4>
                                            <p class="text-sm text-gray-600">{{ commande.date|date('d/m/Y H:i') }}</p>
                                        </div>
                                        <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-bold">
                                            {{ commande.total }} DH
                                        </span>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <p class="text-sm"><strong>Client:</strong> {{ commande.user.email }}</p>
                                        <p class="text-sm"><strong>Adresse:</strong> {{ commande.adresseLivraison }}</p>
                                        {% if commande.user.telephone %}
                                            <p class="text-sm"><strong>T√©l√©phone:</strong> {{ commande.user.telephone }}</p>
                                        {% endif %}
                                    </div>
                                    
                                    <div class="flex gap-2">
                                        <form method="POST" action="{{ path('livreur_commande_prendre', {id: commande.id}) }}" class="flex-1">
                                            <button type="submit" 
                                                    class="w-full bg-green-600 hover:bg-green-700 text-white py-2 rounded-lg font-bold transition">
                                                ‚úÖ Prendre en charge
                                            </button>
                                        </form>
                                        <a href="{{ path('livreur_commande_show', {id: commande.id}) }}" 
                                           class="flex-1 border border-blue-600 text-blue-600 hover:bg-blue-50 py-2 rounded-lg text-center font-bold transition">
                                            üëÅÔ∏è D√©tails
                                        </a>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="text-center py-8">
                                <span class="text-5xl text-gray-300 mb-4 block">üéâ</span>
                                <p class="text-gray-500 text-lg">Aucune commande √† livrer pour le moment</p>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Livraisons en cours -->
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
                    <div class="bg-yellow-600 text-white p-4">
                        <h2 class="text-xl font-bold flex items-center gap-2">
                            <span>üöö</span> Livraisons en cours
                        </h2>
                    </div>
                    <div class="p-4">
                        {% if commandesEnLivraison|length > 0 %}
                            <div class="space-y-4">
                                {% for commande in commandesEnLivraison %}
                                <div class="border border-yellow-200 rounded-xl p-4 bg-yellow-50">
                                    <div class="flex justify-between items-start mb-3">
                                        <div>
                                            <h4 class="font-bold text-yellow-800">Commande #{{ commande.id }}</h4>
                                            <p class="text-sm text-yellow-600">{{ commande.date|date('d/m/Y H:i') }}</p>
                                        </div>
                                        <div class="text-right">
                                            <div class="text-sm text-gray-600">Adresse</div>
                                            <div class="text-sm font-bold text-yellow-700">{{ commande.adresseLivraison|slice(0, 20) }}...</div>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-4">
                                        <p class="text-sm"><strong>Client:</strong> {{ commande.user.email }}</p>
                                        {% if commande.user.telephone %}
                                            <p class="text-sm"><strong>T√©l√©phone:</strong> {{ commande.user.telephone }}</p>
                                        {% endif %}
                                    </div>
                                    
                                    <div class="flex gap-2">
                                        <form method="POST" action="{{ path('livreur_commande_livrer', {id: commande.id}) }}" class="flex-1">
                                            <button type="submit" 
                                                    class="w-full bg-green-600 hover:bg-green-700 text-white py-2 rounded-lg font-bold transition">
                                                ‚úÖ Marquer comme livr√©e
                                            </button>
                                        </form>
                                        <form method="POST" action="{{ path('livreur_commande_probleme', {id: commande.id}) }}" class="flex-1">
                                            <button type="submit" 
                                                    class="w-full bg-red-600 hover:bg-red-700 text-white py-2 rounded-lg font-bold transition">
                                                ‚ö†Ô∏è Signaler probl√®me
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="text-center py-8">
                                <span class="text-5xl text-gray-300 mb-4 block">üì≠</span>
                                <p class="text-gray-500 text-lg">Aucune livraison en cours</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Colonne droite : Informations -->
            <div>
                <!-- Historique r√©cent -->
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden mb-6">
                    <div class="bg-gray-800 text-white p-4">
                        <h2 class="text-xl font-bold flex items-center gap-2">
                            <span>üìã</span> Historique r√©cent
                        </h2>
                    </div>
                    <div class="p-4">
                        {% if commandesTerminees|length > 0 %}
                            <div class="space-y-3">
                                {% for commande in commandesTerminees|slice(0, 5) %}
                                <div class="border-b border-gray-200 pb-3 last:border-0">
                                    <div class="flex justify-between items-center mb-1">
                                        <span class="font-medium text-gray-800">#{{ commande.id }}</span>
                                        <span class="text-sm text-gray-500">{{ commande.date|date('H:i') }}</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-sm text-gray-600">{{ commande.adresseLivraison|slice(0, 15) }}...</span>
                                        <span class="text-sm font-bold text-green-600">{{ commande.total }} DH</span>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                            <div class="mt-4 text-center">
                                <a href="{{ path('livreur_historique') }}" 
                                   class="text-blue-600 hover:text-blue-800 font-bold">
                                    Voir tout l'historique ‚Üí
                                </a>
                            </div>
                        {% else %}
                            <div class="text-center py-6">
                                <span class="text-4xl text-gray-300 mb-2 block">üì≠</span>
                                <p class="text-gray-500">Aucun historique pour le moment</p>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Actions rapides -->
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden mb-6">
                    <div class="bg-blue-600 text-white p-4">
                        <h2 class="text-xl font-bold flex items-center gap-2">
                            <span>‚ö°</span> Actions rapides
                        </h2>
                    </div>
                    <div class="p-4">
                        <div class="space-y-3">
                            <a href="{{ path('livreur_historique') }}" 
                               class="block w-full bg-blue-600 hover:bg-blue-700 text-white p-3 rounded-lg font-bold text-center transition">
                                üìú Historique complet
                            </a>
                            
                            <a href="{{ path('dashboard') }}" 
                               class="block w-full border-2 border-blue-600 text-blue-600 hover:bg-blue-50 p-3 rounded-lg font-bold text-center transition">
                                üè† Accueil
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Informations livreur -->
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
                    <div class="bg-blue-600 text-white p-4">
                        <h2 class="text-xl font-bold flex items-center gap-2">
                            <span>üö¥</span> Mes informations
                        </h2>
                    </div>
                    <div class="p-4">
                        <div class="space-y-3">
                            <div class="flex justify-between">
                                <span class="text-gray-600">Livraisons aujourd'hui:</span>
                                <span class="font-bold text-blue-700">{{ commandesTerminees|length }}</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">En cours:</span>
                                <span class="font-bold text-yellow-700">{{ commandesEnLivraison|length }}</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">√Ä prendre:</span>
                                <span class="font-bold text-green-700">{{ commandesPretes|length }}</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Total ce mois:</span>
                                <span class="font-bold text-purple-700">{{ commandesTerminees|length * 10 }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Actualiser les donn√©es toutes les 30 secondes
setInterval(function() {
    location.reload();
}, 30000);
</script>

<style>
.border-l-4 {
    border-left-width: 4px;
}
</style>
{% endblock %}