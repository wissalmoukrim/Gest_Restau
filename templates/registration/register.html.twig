            </div>

            <!-- Corps du formulaire -->
            <div class="card-body p-4 p-md-5">
                {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                
                <div class="row g-4">
                    <!-- Nom et Prénom -->
