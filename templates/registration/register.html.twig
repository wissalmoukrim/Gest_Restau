            </div>
        </div>

        <!-- Avantages -->
        <div class="row g-4">
            <div class="col-md-4">
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h6 class="fw-bold mb-2">Sécurité maximale</h6>
                    <p class="text-muted small mb-0">
                        Vos données sont cryptées et protégées
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="bi bi-lightning-charge"></i>
                    </div>
                    <h6 class="fw-bold mb-2">Inscription rapide</h6>
                    <p class="text-muted small mb-0">
                        Créez votre compte en moins de 2 minutes
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="bi bi-headset"></i>
                    </div>
                    <h6 class="fw-bold mb-2">Support 24/7</h6>
                    <p class="text-muted small mb-0">
                        Assistance disponible à tout moment
                    </p>
                </div>
            </div>
        </div>
