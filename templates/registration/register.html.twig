                <!-- Lien vers connexion -->
                <div class="text-center mt-5 pt-4 border-top">
                    <p class="text-muted mb-0">
                        Déjà membre ?
                        <a href="{{ path('app_login') }}" class="link-primary ms-1">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Se connecter
