                            </small>
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.prenom) }}
                            </div>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <div class="form-group-enhanced">
                            <label class="form-label-enhanced">
                                <i class="bi bi-envelope"></i>
                                Adresse email
                            </label>
                            <div class="input-group-enhanced">
                                <i class="bi bi-envelope input-icon"></i>
                                {{ form_widget(registrationForm.email, {
                                    'attr': {
                                        'class': 'form-control form-control-enhanced',
                                        'placeholder': 'exemple@email.com',
                                        'autocomplete': 'email'
                                    }
                                }) }}
                            </div>
                            <small class="form-text text-muted mt-1 d-block">
                                <i class="bi bi-shield-check"></i> Nous protégeons vos données
                            </small>
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.email) }}
                            </div>
                        </div>
                    </div>

                    <!-- Téléphone -->
                    <div class="col-md-6">
                        <div class="form-group-enhanced">
                            <label class="form-label-enhanced">
                                <i class="bi bi-phone"></i>
                                Téléphone
                            </label>
                            <div class="input-group-enhanced">
                                <i class="bi bi-phone input-icon"></i>
                                {{ form_widget(registrationForm.telephone, {
                                    'attr': {
                                        'class': 'form-control form-control-enhanced',
                                        'placeholder': '06 12 34 56 78',
                                        'autocomplete': 'tel'
                                    }
                                }) }}
                            </div>
                            <small class="form-text text-muted mt-1 d-block">
                                Format : 06 12 34 56 78
                            </small>
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.telephone) }}
                            </div>
                        </div>
                    </div>

                    <!-- Adresse -->
                    <div class="col-12">
                        <div class="form-group-enhanced">
                            <label class="form-label-enhanced">
                                <i class="bi bi-geo-alt"></i>
                                Adresse
                            </label>
                            <div class="input-group-enhanced">
                                <i class="bi bi-geo-alt input-icon"></i>
                                {{ form_widget(registrationForm.adresse, {
                                    'attr': {
                                        'class': 'form-control form-control-enhanced',
                                        'placeholder': 'Votre adresse complète',
                                        'autocomplete': 'street-address'
                                    }
                                }) }}
                            </div>
                            <small class="form-text text-muted mt-1 d-block">
                                Rue, code postal, ville
                            </small>
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.adresse) }}
                            </div>
                        </div>
                    </div>

                    <!-- Mot de passe -->
                    <div class="col-12">
                        <div class="form-group-enhanced">
                            <label class="form-label-enhanced">
                                <i class="bi bi-key"></i>
                                Mot de passe
                            </label>
                            <div class="input-group-enhanced">
                                <i class="bi bi-key input-icon"></i>
