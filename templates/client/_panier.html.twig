<div id="panierPanel" class="fixed top-0 right-0 h-full w-96 bg-white shadow-2xl transform translate-x-full transition-all">
<div class="p-6 space-y-4">

<h2 class="text-xl font-bold">Votre panier</h2>

{% set total = 0 %}
{% for item in panier.panierItems %}
    {% set sub = item.plat.prix * item.quantity %}
    {% set total = total + sub %}
<div class="flex justify-between border-b pb-3">
    <div>
        <p class="font-semibold">{{ item.plat.nom }}</p>
        <p>{{ sub }} DH</p>
    </div>
    <div class="flex items-center gap-2">
        <!-- Boutons pour modifier la quantitÃ© -->
        <a href="{{ path('client_panier_update', {id: item.id, quantity: item.quantity - 1}) }}" class="px-2">âž–</a>
        <span>{{ item.quantity }}</span>
        <a href="{{ path('client_panier_update', {id: item.id, quantity: item.quantity + 1}) }}" class="px-2">âž•</a>
        <a href="{{ path('client_panier_remove', {id: item.id}) }}" class="px-2">ðŸ—‘</a>
    </div>
</div>
{% endfor %}

