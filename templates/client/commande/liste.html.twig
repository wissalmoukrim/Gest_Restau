{% extends 'base_dashboard.html.twig' %}

{% block title %}Mes commandes - Gest Restau{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-gray-100 to-blue-50 p-6">
    <div class="max-w-6xl mx-auto">
        
        <!-- Titre -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-3">
                <span class="text-amber-600">ğŸ“‹</span>
                Mes commandes
            </h1>
            <p class="text-gray-600">Consultez l'historique et le statut de vos commandes</p>
        </div>
        
        {% if commandes|length > 0 %}
            <!-- Filtres rapides -->
            <div class="flex flex-wrap gap-3 mb-6">
                <button onclick="filtrerCommandes('tous')" 
                        class="bg-blue-600 text-white px-4 py-2 rounded-full font-bold">
                    Toutes ({{ commandes|length }})
                </button>
                <button onclick="filtrerCommandes('en_attente')"
                        class="bg-yellow-100 text-yellow-800 px-4 py-2 rounded-full font-bold">
                    En attente
                </button>
                <button onclick="filtrerCommandes('en_livraison')"
                        class="bg-purple-100 text-purple-800 px-4 py-2 rounded-full font-bold">
                    En livraison
                </button>
                <button onclick="filtrerCommandes('terminee')"
                        class="bg-green-100 text-green-800 px-4 py-2 rounded-full font-bold">
                    TerminÃ©es
                </button>
            </div>
            
            <!-- Liste des commandes -->
            <div class="space-y-6">
                {% for commande in commandes %}
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200 hover:border-amber-400 transition-all duration-300"
                     data-statut="{{ commande.statut }}">
                    
                    <!-- En-tÃªte -->
                    <div class="bg-gradient-to-r from-gray-800 to-gray-900 text-white p-5">
                        <div class="flex justify-between items-center">
                            <div>
                                <h3 class="text-xl font-bold">Commande #{{ commande.id }}</h3>
                                <p class="text-gray-300">{{ commande.date|date('d/m/Y Ã  H:i') }}</p>
                            </div>
                            <span class="px-4 py-2 rounded-full text-sm font-bold 
                                {% if commande.statut == 'en_attente' %}bg-yellow-100 text-yellow-800
                                {% elseif commande.statut == 'en_preparation' %}bg-blue-100 text-blue-800
                                {% elseif commande.statut == 'en_livraison' %}bg-purple-100 text-purple-800
                                {% elseif commande.statut == 'terminee' %}bg-green-100 text-green-800
                                {% elseif commande.statut == 'annulee' %}bg-red-100 text-red-800
                                {% else %}bg-gray-100 text-gray-800{% endif %}">
                                {{ commande.statut|replace({'_': ' '})|title }}
                            </span>
                        </div>
                    </div>
                    
                    <!-- Corps -->
                    <div class="p-5">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-5">
                            <!-- Infos gÃ©nÃ©rales -->
                            <div>
                                <h4 class="font-bold text-gray-700 mb-3">ğŸ“Š Informations</h4>
                                <div class="space-y-2">
                                    <div class="flex justify-between">
                                        <span class="text-gray-600">Total:</span>
                                        <span class="text-xl font-bold text-green-600">{{ commande.total }} DH</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-gray-600">Plats:</span>
                                        <span class="font-bold">{{ commande.commandeItems|length }}</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-gray-600">Adresse:</span>
                                        <span class="font-medium text-right">{{ commande.adresseLivraison|slice(0, 30) }}...</span>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Ã‰quipe assignÃ©e -->
                            <div>
                                <h4 class="font-bold text-gray-700 mb-3">ğŸ‘¥ Ã‰quipe</h4>
                                <div class="space-y-2">
                                    {% if commande.chef %}
                                    <div class="flex items-center gap-2">
                                        <span class="text-yellow-600">ğŸ‘¨â€ğŸ³</span>
                                        <div>
                                            <p class="font-medium">Chef {{ commande.chef.prenom }}</p>
                                            <p class="text-xs text-gray-500">En prÃ©paration</p>
                                        </div>
                                    </div>
                                    {% endif %}
                                    
                                    {% if commande.livreur %}
                                    <div class="flex items-center gap-2">
                                        <span class="text-blue-600">ğŸšš</span>
                                        <div>
                                            <p class="font-medium">Livreur {{ commande.livreur.prenom }}</p>
                                            <p class="text-xs text-gray-500">En livraison</p>
                                        </div>
                                    </div>
                                    {% endif %}
                                    
                                    {% if not commande.chef and not commande.livreur %}
                                    <p class="text-gray-500 text-sm">En attente d'assignation</p>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <!-- Plats -->
                            <div>
                                <h4 class="font-bold text-gray-700 mb-3">ğŸ½ï¸ Plats commandÃ©s</h4>
                                <div class="space-y-1">
                                    {% for item in commande.commandeItems|slice(0, 3) %}
                                    <div class="flex justify-between text-sm">
                                        <span>{{ item.quantite }}Ã— {{ item.plat.nom|slice(0, 20) }}</span>
                                        <span class="font-bold">{{ item.quantite * item.prixUnitaire }} DH</span>
                                    </div>
                                    {% endfor %}
                                    {% if commande.commandeItems|length > 3 %}
                                    <p class="text-gray-500 text-sm">+ {{ commande.commandeItems|length - 3 }} autres plats</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        
                        <!-- Actions -->
                        <div class="flex flex-wrap gap-3">
                            <a href="{{ path('client_commande_show', {id: commande.id}) }}" 
                               class="bg-amber-600 hover:bg-amber-700 text-white px-5 py-2 rounded-lg font-bold transition">
                                ğŸ‘ï¸ Voir les dÃ©tails
                            </a>
                            
                            {% if commande.statut == 'en_livraison' and commande.livreur and commande.livreur.telephone %}
                            <button onclick="appelerLivreur('{{ commande.livreur.telephone }}')"
                                    class="border border-green-600 text-green-600 hover:bg-green-50 px-5 py-2 rounded-lg font-bold transition">
                                ğŸ“ Appeler le livreur
                            </button>
                            {% endif %}
                            
                            {% if commande.statut == 'en_attente' %}
                            <form method="POST" action="{{ path('client_commande_annuler', {id: commande.id}) }}" 
                                  onsubmit="return confirm('Annuler la commande #{{ commande.id }} ?')"
                                  class="ml-auto">
                                <button type="submit" 
                                        class="bg-red-600 hover:bg-red-700 text-white px-5 py-2 rounded-lg font-bold transition">
                                    âŒ Annuler la commande
                                </button>
                            </form>
                            {% endif %}
                            
                            <a href="{{ path('app_plat_index') }}" 
                               class="border-2 border-blue-600 text-blue-600 hover:bg-blue-50 px-5 py-2 rounded-lg font-bold transition">
                                ğŸ½ï¸ Commander Ã  nouveau
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% else %}
            <!-- Message si aucune commande -->
            <div class="text-center py-16 bg-white rounded-2xl shadow-lg">
                <div class="text-6xl text-gray-300 mb-4">ğŸ›’</div>
                <h3 class="text-2xl text-gray-600 mb-2">Aucune commande</h3>
                <p class="text-gray-500 mb-6">Vous n'avez pas encore passÃ© de commande</p>
                <a href="{{ path('app_plat_index') }}" 
                   class="inline-block bg-gradient-to-r from-amber-500 to-amber-600 hover:from-amber-600 hover:to-amber-700 
                          text-white px-8 py-3 rounded-full font-bold text-lg transition shadow-lg">
                    ğŸ½ï¸ Commander maintenant
                </a>
            </div>
        {% endif %}
    </div>
</div>

<script>
function filtrerCommandes(statut) {
    const commandes = document.querySelectorAll('[data-statut]');
    
    commandes.forEach(commande => {
        if (statut === 'tous' || commande.getAttribute('data-statut') === statut) {
            commande.style.display = 'block';
        } else {
            commande.style.display = 'none';
        }
    });
}

function appelerLivreur(telephone) {
    if (telephone && telephone !== 'N/A') {
        if (confirm('Appeler le livreur au ' + telephone + ' ?')) {
            window.location.href = 'tel:' + telephone;
        }
    } else {
        alert('NumÃ©ro de tÃ©lÃ©phone non disponible');
    }
}

// Actualiser la page toutes les 60 secondes pour les mises Ã  jour
setTimeout(() => {
    window.location.reload();
}, 60000);
</script>

<style>
[data-statut] {
    transition: all 0.3s ease;
}
</style>
{% endblock %}