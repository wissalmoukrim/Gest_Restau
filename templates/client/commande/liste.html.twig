            <!-- Liste des commandes -->
            <div class="space-y-6">
                {% for commande in commandes %}
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200 hover:border-amber-400 transition-all duration-300 p-5"
                     data-statut="{{ commande.statut }}">

                    <!-- En-tÃªte -->
                    <div class="flex justify-between items-center mb-3">
                        <h3 class="text-xl font-bold">Commande #{{ commande.id }}</h3>
                        <p class="text-gray-500 text-sm">{{ commande.date|date('d/m/Y Ã  H:i') }}</p>
                    </div>

                    <!-- Progress Bar / Timeline -->
                    <div class="mb-4">
                        <div class="flex items-center justify-between mb-2 text-xs font-bold">
                            <span class="{{ commande.statut in ['en_attente','en_cours','prete','terminee'] ? 'text-green-800' : 'text-gray-400' }}">En attente</span>
                            <span class="{{ commande.statut in ['en_cours','prete','terminee'] ? 'text-green-800' : 'text-gray-400' }}">En cours</span>
                            <span class="{{ commande.statut in ['prete','terminee'] ? 'text-green-800' : 'text-gray-400' }}">PrÃªte</span>
                        
                        </div>
                        <div class="relative h-2 bg-gray-200 rounded-full">
                            {% set progress = 0 %}
                            {% if commande.statut == 'en_attente' %} {% set progress = 25 %}
                            {% elseif commande.statut == 'en_cours' %} {% set progress = 50 %}
                            {% elseif commande.statut == 'prete' %} {% set progress = 100 %}
                            {% endif %}

                            <div class="absolute top-0 left-0 h-2 bg-green-600 rounded-full transition-all duration-500" style="width: {{ progress }}%;"></div>
                        </div>
                    </div>

                    <!-- Plats commandÃ©s -->
                    <div class="mb-3">
                        <h4 class="font-bold text-gray-700 mb-2">ğŸ½ï¸ Plats commandÃ©s</h4>
                        <ul class="list-disc list-inside text-sm">
                            {% for item in commande.commandeItems %}
                                <li>{{ item.quantite }} Ã— {{ item.plat.nom }} ({{ item.quantite * item.prixUnitaire }} DH)</li>
                            {% endfor %}
                        </ul>
                    </div>

                    <!-- Total -->
                    <div class="flex justify-between items-center mb-3">
                        <span class="font-bold text-gray-700">Total:</span>
                        <span class="font-bold text-green-600">{{ commande.total }} DH</span>
                    </div>

                    <!-- Actions -->
                    <div class="flex flex-wrap gap-3">
                        <a href="{{ path('client_commande_show', {id: commande.id}) }}" class="bg-amber-600 hover:bg-amber-700 text-white px-5 py-2 rounded-lg font-bold transition">ğŸ‘ï¸ Voir les dÃ©tails</a>

                        {% if commande.statut == 'en_livraison' and commande.livreur and commande.livreur.telephone %}
                        <button onclick="appelerLivreur('{{ commande.livreur.telephone }}')" class="border border-green-600 text-green-600 hover:bg-green-50 px-5 py-2 rounded-lg font-bold transition">ğŸ“ Appeler le livreur</button>
                        {% endif %}

                        {% if commande.statut == 'en_attente' %}
                        <form method="POST" action="{{ path('client_commande_annuler', {id: commande.id}) }}" onsubmit="return confirm('Annuler la commande #{{ commande.id }} ?')" class="ml-auto">
                            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-5 py-2 rounded-lg font-bold transition">âŒ Annuler la commande</button>
                        </form>
                        {% endif %}

                        <a href="{{ path('app_plat_index') }}" class="border-2 border-blue-600 text-blue-600 hover:bg-blue-50 px-5 py-2 rounded-lg font-bold transition">ğŸ½ï¸ Commander Ã  nouveau</a>
                    </div>

                </div>
