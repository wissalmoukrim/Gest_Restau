{% extends 'base_dashboard.html.twig' %}

{% block title %}Mon Panier - Gest Restau{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-gray-900 to-black py-8 px-4">
    <div class="max-w-7xl mx-auto">
        <!-- En-tête -->
        <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center mb-10 gap-6">
            <div>
                <div class="flex items-center gap-3 mb-2">
                    <div class="p-3 bg-amber-500/10 rounded-2xl">
                        <svg class="w-8 h-8 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                        </svg>
                    </div>
                    <h1 class="text-3xl font-bold bg-gradient-to-r from-amber-400 to-yellow-500 bg-clip-text text-transparent">
                        Mon Panier
                    </h1>
                </div>
                <p class="text-gray-400">Gérez vos articles avant de finaliser votre commande</p>
            </div>

            <div class="flex flex-col sm:flex-row gap-4">
                <a href="{{ path('dashboard') }}"
                   class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-gray-800 hover:bg-gray-700 text-gray-300 font-medium transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-amber-500/10">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Continuer mes achats
                </a>
            </div>
        </div>

        {% if panier.panierItems|length > 0 %}
        <div class="grid lg:grid-cols-3 gap-8">
            <!-- Liste des articles -->
            <div class="lg:col-span-2">
                <div class="bg-gray-800/50 backdrop-blur-sm rounded-3xl border border-gray-700/50 overflow-hidden shadow-2xl">
                    <div class="p-6 border-b border-gray-700/50">
                        <h2 class="text-xl font-bold text-amber-300 flex items-center gap-3">
                            <span class="p-2 bg-amber-500/20 rounded-lg">
                                {{ panier.panierItems|length }}
                            </span>
                            Articles dans votre panier
                        </h2>
                    </div>

                    <div class="divide-y divide-gray-700/50">
                        {% set total = 0 %}
                        {% for item in panier.panierItems %}
                            {% set sousTotal = item.plat.prix * item.quantity %}
                            {% set total = total + sousTotal %}

                            <div class="p-6 hover:bg-gray-700/20 transition-all duration-300">
                                <div class="flex flex-col sm:flex-row gap-6">
                                    <!-- Image -->
                                    <div class="relative flex-shrink-0">
                                        <img src="{{ asset('uploads/' ~ item.plat.image) }}"
                                             class="w-32 h-32 object-cover rounded-2xl border-2 border-amber-500/30 shadow-lg">
                                        <div class="absolute -top-2 -right-2 bg-amber-500 text-black font-bold rounded-full w-8 h-8 flex items-center justify-center text-sm">
                                            {{ item.quantity }}
                                        </div>
                                    </div>

                                    <!-- Détails -->
                                    <div class="flex-1">
                                        <div class="flex flex-col lg:flex-row lg:items-start justify-between gap-4">
                                            <div>
                                                <h3 class="text-xl font-bold text-white mb-2">
                                                    {{ item.plat.nom }}
                                                </h3>
                                                <p class="text-gray-400 text-sm mb-4">
                                                    {{ item.plat.description|slice(0, 60) }}...
                                                </p>
                                                <div class="flex items-center gap-2 text-amber-400 font-bold text-lg">
                                                    {{ item.plat.prix }} DH
                                                    <span class="text-gray-500 text-sm font-normal">/ unité</span>
                                                </div>
                                            </div>

                                            <!-- Total et actions -->
                                            <div class="flex flex-col items-end gap-4">
                                                <div class="text-right">
                                                    <p class="text-gray-400 text-sm">Total</p>
                                                    <p class="text-2xl font-bold text-amber-400">
                                                        {{ sousTotal }} DH
                                                    </p>
                                                </div>

                                                <div class="flex items-center gap-3">
                                                    <!-- Gestion quantité -->
                                                    <div class="flex items-center gap-2 bg-gray-900/50 rounded-xl p-2">
                                                        <form method="POST"
                                                              action="{{ path('client_panier_update', {id: item.id, quantity: item.quantity - 1}) }}">
                                                            <button type="submit"
                                                                    class="w-9 h-9 flex items-center justify-center rounded-lg bg-gray-800 hover:bg-gray-700 text-gray-300 transition-colors">
                                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
                                                                </svg>
                                                            </button>
                                                        </form>

                                                        <span class="w-10 text-center font-bold text-white">
                                                            {{ item.quantity }}
                                                        </span>

                                                        <form method="POST"
                                                              action="{{ path('client_panier_update', {id: item.id, quantity: item.quantity + 1}) }}">
                                                            <button type="submit"
                                                                    class="w-9 h-9 flex items-center justify-center rounded-lg bg-amber-500 hover:bg-amber-600 text-black transition-colors">
                                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                                                                </svg>
                                                            </button>
                                                        </form>
                                                    </div>

                                                    <!-- Supprimer -->
                                                    <form method="POST"
                                                          action="{{ path('client_panier_remove', {id: item.id}) }}"
                                                          onsubmit="return confirm('Supprimer {{ item.plat.nom }} du panier ?')">
                                                        <button type="submit"
                                                                class="p-2 rounded-lg bg-red-900/30 hover:bg-red-900/50 text-red-400 transition-colors"
                                                                title="Supprimer">
                                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                                            </svg>
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Bouton Vider panier -->
                <div class="mt-6">
                    <form method="POST"
                          action="{{ path('client_panier_vider') }}"
                          onsubmit="return confirm('Êtes-vous sûr de vouloir vider tout votre panier ?')">
                        <button type="submit"
                                class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-gray-800 hover:bg-red-900/30 text-gray-400 hover:text-red-400 font-medium transition-all duration-300 border border-gray-700 hover:border-red-700/50">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                            Vider le panier
                        </button>
                    </form>
                </div>
            </div>

<!-- Récapitulatif -->
<div class="lg:col-span-1">
    <div class="sticky top-8">
        <div class="bg-gradient-to-br from-gray-800/90 to-gray-900/90 backdrop-blur-sm rounded-3xl border border-amber-900/30 p-8 shadow-2xl shadow-amber-900/10">
            <!-- En-tête avec badge -->
            <div class="flex items-center justify-between mb-8">
                <div class="flex items-center gap-3">
                    <div class="p-2 bg-gradient-to-br from-amber-500/20 to-amber-600/20 rounded-xl">
                        <svg class="w-6 h-6 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-white">Récapitulatif</h2>
                </div>
                <span class="px-3 py-1 bg-amber-500/10 text-amber-400 text-sm font-medium rounded-full border border-amber-500/20">
                    {{ panier.panierItems|length }} article{% if panier.panierItems|length > 1 %}s{% endif %}
                </span>
            </div>

            <!-- Détails du panier -->
            <div class="space-y-6 mb-8">
                <!-- Sous-total -->
                <div class="flex justify-between items-center p-4 bg-gray-900/50 rounded-xl border border-gray-700/30">
                    <div class="flex items-center gap-3">
                        <div class="p-2 bg-gray-800 rounded-lg">
                            <svg class="w-5 h-5 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </div>
                        <div>
                            <p class="text-gray-400 text-sm">Sous-total</p>
                            <p class="text-white font-medium">{{ total }} DH</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="text-gray-400 text-sm">Articles</p>
                        <p class="text-white font-medium">{{ panier.panierItems|length }}</p>
                    </div>
                </div>

                <!-- Livraison -->
                <div class="flex justify-between items-center p-4 bg-gray-900/50 rounded-xl border border-gray-700/30">
                    <div class="flex items-center gap-3">
                        <div class="p-2 bg-green-900/20 rounded-lg">
                            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                            </svg>
                        </div>
                        <div>
                            <p class="text-gray-400 text-sm">Livraison</p>
                            <p class="text-green-400 font-medium">Gratuite</p>
                        </div>
                    </div>
                    <div class="text-amber-400">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7"/>
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Total TTC - Section mise en avant -->
            <div class="relative overflow-hidden rounded-2xl bg-gradient-to-r from-amber-900/30 via-amber-800/20 to-amber-900/30 p-6 mb-8 border border-amber-700/30">
                <!-- Effet de brillance -->
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-amber-500/5 to-transparent animate-shimmer"></div>
                
                <div class="relative">
                    <p class="text-gray-300 text-sm mb-1">Total à payer</p>
                    <div class="flex items-end justify-between">
                        <div>
                            <p class="text-5xl font-bold text-amber-300 leading-none">{{ total }} <span class="text-2xl text-amber-400">DH</span></p>
                            <p class="text-gray-400 text-sm mt-2">TTC • Frais inclus</p>
                        </div>
                        <!-- Belle icône DH stylisée -->
                        <div class="relative">
                            <div class="w-16 h-16 bg-gradient-to-br from-amber-500/20 to-amber-600/20 rounded-2xl flex items-center justify-center border border-amber-500/30">
                                <div class="text-center">
                                    <div class="text-amber-300 text-2xl font-bold">DH</div>
                                    <div class="text-amber-400/70 text-[10px] mt-0.5 tracking-wider">DIRHAM</div>
                                </div>
                            </div>
                            <div class="absolute -top-1 -right-1 w-4 h-4 bg-amber-500 rounded-full border-2 border-gray-900"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bouton Commander -->
            <form method="POST" action="{{ path('client_panier_commander') }}">
                <button type="submit"
                        class="group w-full relative overflow-hidden bg-gradient-to-r from-amber-500 via-amber-400 to-amber-500 hover:from-amber-400 hover:via-amber-300 hover:to-amber-400 text-gray-900 font-bold py-5 px-6 rounded-2xl transition-all duration-300 transform hover:scale-[1.02] shadow-lg shadow-amber-500/20 hover:shadow-xl hover:shadow-amber-400/30 flex items-center justify-center gap-3 text-lg mb-6">
                    <!-- Effet de brillance sur hover -->
                    <div class="absolute inset-0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-1000 bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
                    
                    <svg class="w-7 h-7 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                    </svg>
                    <span class="relative z-10">Commander maintenant</span>
                </button>
            </form>

            <!-- Sécurité -->
            <div class="text-center p-4 bg-gray-900/30 rounded-xl border border-gray-700/20">
                <div class="flex items-center justify-center gap-2 mb-2">
                    <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <p class="text-gray-300 text-sm font-medium">Paiement sécurisé</p>
                </div>
                <p class="text-gray-500 text-xs">Transactions cryptées • 100% sécurisé • Devise : DH</p>
            </div>
        </div>

        <!-- Infos supplémentaires -->
        <div class="mt-6 bg-gray-800/30 rounded-2xl p-6 border border-gray-700/30 backdrop-blur-sm">
            <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-3">
                <div class="p-2 bg-amber-500/10 rounded-lg">
                    <svg class="w-5 h-5 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                À savoir
            </h3>
            <ul class="space-y-3">
                <li class="flex items-start gap-3 p-3 bg-gray-900/30 rounded-lg hover:bg-gray-900/50 transition-colors">
                    <span class="text-amber-400 mt-0.5">✓</span>
                    <div>
                        <p class="text-white text-sm font-medium">Livraison gratuite</p>
                        <p class="text-gray-400 text-xs">À partir de 100 DH de commande</p>
                    </div>
                </li>
                <li class="flex items-start gap-3 p-3 bg-gray-900/30 rounded-lg hover:bg-gray-900/50 transition-colors">
                    <span class="text-amber-400 mt-0.5">✓</span>
                    <div>
                        <p class="text-white text-sm font-medium">Préparation rapide</p>
                        <p class="text-gray-400 text-xs">Sous 15-30 minutes</p>
                    </div>
                </li>
                <li class="flex items-start gap-3 p-3 bg-gray-900/30 rounded-lg hover:bg-gray-900/50 transition-colors">
                    <span class="text-amber-400 mt-0.5">✓</span>
                    <div>
                        <p class="text-white text-sm font-medium">Annulation flexible</p>
                        <p class="text-gray-400 text-xs">Gratuite avant 5 minutes</p>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>

<!-- Style pour l'animation de brillance -->
<style>
    @keyframes shimmer {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
    }
    
    .animate-shimmer {
        animation: shimmer 3s infinite;
    }
</style>

        {% else %}
        <!-- Panier vide -->
        <div class="max-w-2xl mx-auto text-center py-20">
            <div class="mb-8">
                <div class="inline-flex p-6 bg-gradient-to-br from-gray-800 to-gray-900 rounded-3xl mb-6">
                    <svg class="w-24 h-24 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                    </svg>
                </div>
                <h2 class="text-3xl font-bold text-white mb-4">Votre panier est vide</h2>
                <p class="text-gray-400 text-lg mb-8 max-w-md mx-auto">
                    Ajoutez des plats délicieux à votre panier pour commencer votre commande
                </p>
                <a href="{{ path('dashboard') }}"
                   class="inline-flex items-center gap-3 bg-gradient-to-r from-amber-500 to-yellow-500 hover:from-amber-600 hover:to-yellow-600 text-black font-bold px-8 py-4 rounded-2xl transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-amber-500/25 text-lg">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    Explorer notre carte
                </a>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<!-- Animations -->
<style>
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fadeIn 0.6s ease-out;
    }

    .hover-lift {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hover-lift:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 40px rgba(251, 191, 36, 0.15);
    }
</style>

<script>
    // Ajouter une animation d'apparition
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.bg-gray-800\\/50, .from-gray-800, .bg-gray-800\\/30').forEach((el, index) => {
            el.style.animationDelay = `${index * 0.1}s`;
            el.classList.add('animate-fade-in');
        });
    });
</script>
{% endblock %}