<script>
document.addEventListener('DOMContentLoaded', function() {
    // Animation des cartes
    const cards = document.querySelectorAll('.bg-white');
    cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
            card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
        }, 100 * index);
    });
    
    // Auto-refresh toutes les 60 secondes
    setTimeout(() => {
        location.reload();
    }, 60000);
});

function toggleDetails(id) {
    const element = document.getElementById('details-' + id);
    const button = element.previousElementSibling;
    const icon = button.querySelector('i');
    
    element.classList.toggle('hidden');
    
    if (element.classList.contains('hidden')) {
        icon.className = 'fas fa-chevron-down mr-1';
    } else {
        icon.className = 'fas fa-chevron-up mr-1';
    }
}

// Confirmation avant r√©solution
document.addEventListener('submit', function(e) {
    if (e.target.matches('form[action*="resoudre"]')) {
        if (!confirm('√ätes-vous s√ªr de vouloir marquer cet incident comme r√©solu ?')) {
            e.preventDefault();
        }
    }
});
</script>

